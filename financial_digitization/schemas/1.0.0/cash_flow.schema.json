{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Cash Flow",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "periods": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "opening_cash": {"$ref": "#/$defs/amount"},
          "net_change": {"$ref": "#/$defs/amount"},
          "closing_cash": {"$ref": "#/$defs/amount"}
        },
        "required": ["opening_cash", "net_change", "closing_cash"]
      }
    }
  },
  "required": ["periods"],
  "$defs": {
    "amount": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "raw": {"type": "string"},
        "value": {"type": ["number", "null"]},
        "confidence": {"type": "number"},
        "parse_status": {"type": "string"},
        "parse_warnings": {"type": "array", "items": {"type": "string"}}
      },
      "required": ["raw", "value", "confidence", "parse_status", "parse_warnings"]
    }
  }
}
