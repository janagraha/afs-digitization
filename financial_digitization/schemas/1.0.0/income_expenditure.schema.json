{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Income and Expenditure",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "periods": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "income": {"type": "array", "items": {"$ref": "#/$defs/line_item"}},
          "expenditure": {"type": "array", "items": {"$ref": "#/$defs/line_item"}},
          "surplus_deficit": {"$ref": "#/$defs/amount"}
        },
        "required": ["income", "expenditure", "surplus_deficit"]
      }
    }
  },
  "required": ["periods"],
  "$defs": {
    "line_item": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "key": {"type": "string"},
        "label_raw": {"type": "string"},
        "amount": {"$ref": "#/$defs/amount"},
        "evidence": {"type": "array", "items": {"$ref": "#/$defs/evidence"}}
      },
      "required": ["key", "label_raw", "amount", "evidence"]
    },
    "amount": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "raw": {"type": "string"},
        "value": {"type": ["number", "null"]},
        "confidence": {"type": "number", "minimum": 0, "maximum": 1},
        "parse_status": {"type": "string"},
        "parse_warnings": {"type": "array", "items": {"type": "string"}}
      },
      "required": ["raw", "value", "confidence", "parse_status", "parse_warnings"]
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "page": {"type": "integer"},
        "bbox": {"type": "array", "items": {"type": "number"}, "minItems": 4, "maxItems": 4},
        "source": {"type": "string"}
      },
      "required": ["page", "bbox", "source"]
    }
  }
}
